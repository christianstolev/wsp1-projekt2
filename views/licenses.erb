<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        :root {
            --primary-color: #4f46e5;
            --secondary-color: #6366f1;
            --background-color: #f9fafb;
            --surface-color: #ffffff;
            --text-color: #1f2937;
            --border-color: #e5e7eb;
            --sidebar-width: 250px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            background-color: var(--background-color);
            color: var(--text-color);
            line-height: 1.5;
        }

        .dashboard {
            display: grid;
            grid-template-columns: var(--sidebar-width) 1fr;
            min-height: 100vh;
        }

        .sidebar {
            background-color: var(--surface-color);
            border-right: 1px solid var(--border-color);
            padding: 1.5rem;
        }

        .logo {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 2rem;
            color: var(--primary-color);
        }

        .nav-links {
            list-style: none;
        }

        .nav-link {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            color: var(--text-color);
            text-decoration: none;
            border-radius: 0.5rem;
            margin-bottom: 0.5rem;
            transition: background-color 0.2s;
        }

        .nav-link:hover,
        .nav-link.active {
            background-color: var(--primary-color);
            color: white;
        }

        .nav-link i {
            margin-right: 0.75rem;
            width: 1.25rem;
        }

        .main-content {
            padding: 1.5rem;
        }

        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .user-menu {
            position: relative;
        }

        .user-button {
            background: none;
            border: none;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem;
            border-radius: 0.5rem;
        }

        .user-button:hover {
            background-color: var(--border-color);
        }

        .user-menu-dropdown {
            position: absolute;
            right: 0;
            top: 100%;
            background-color: var(--surface-color);
            border: 1px solid var(--border-color);
            border-radius: 0.5rem;
            padding: 0.5rem;
            min-width: 200px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            display: none;
        }

        .user-menu-dropdown.active {
            display: block;
        }

        .user-menu-item {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            color: var(--text-color);
            text-decoration: none;
            border-radius: 0.25rem;
        }

        .user-menu-item:hover {
            background-color: var(--background-color);
        }

        .user-menu-item i {
            margin-right: 0.75rem;
            width: 1.25rem;
        }

        .tab-content {
            display: none;
            background-color: var(--surface-color);
            padding: 1.5rem;
            border-radius: 0.5rem;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
        }

        .tab-content.active {
            display: block;
        }

        .card {
            background-color: var(--surface-color);
            border-radius: 0.5rem;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .stat-card {
            background-color: var(--surface-color);
            border-radius: 0.5rem;
            padding: 1.5rem;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
        }

        .stat-card h3 {
            font-size: 0.875rem;
            color: #6b7280;
            margin-bottom: 0.5rem;
        }

        .stat-card .value {
            font-size: 1.875rem;
            font-weight: bold;
            color: var(--text-color);
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 0.75rem;
            text-align: left;
            border-bottom: 1px solid var(--border-color);
        }

        th {
            background-color: var(--background-color);
            font-weight: 600;
        }

        @media (max-width: 768px) {
            .dashboard {
                grid-template-columns: 1fr;
            }

            .sidebar {
                display: none;
            }
        }

        
        .form-group {
            margin-bottom: 1rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: var(--text-color);
        }

        .form-input {
            width: 100%;
            padding: 0.5rem;
            border: 1px solid var(--border-color);
            border-radius: 0.375rem;
            background-color: var(--background-color);
            color: var(--text-color);
        }

        .form-range {
            width: 100%;
            height: 0.5rem;
            border-radius: 0.25rem;
            background-color: var(--border-color);
            appearance: none;
        }

        .form-range::-webkit-slider-thumb {
            appearance: none;
            width: 1rem;
            height: 1rem;
            background-color: var(--primary-color);
            border-radius: 50%;
            cursor: pointer;
        }

        .submit-button {
            background-color: var(--primary-color);
            color: white;
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 0.375rem;
            cursor: pointer;
            font-weight: 500;
        }

        .submit-button:hover {
            background-color: var(--secondary-color);
        }
    </style>
</head>
<body>
    <div class="dashboard">
        <aside class="sidebar">
            <div class="logo">
                <i class="fas fa-chart-line"></i> Admin
            </div>
            <nav>
                <ul class="nav-links">
                    <li><a href="/" class="nav-link" data-tab="dashboard">
                        <i class="fas fa-home"></i> Dashboard
                    </a></li>
                    <li><a href="#" class="nav-link active" data-tab="users">
                        <i class="fas fa-users"></i> Licenses
                    </a></li>
                    <li><a href="#analytics" class="nav-link" data-tab="analytics">
                        <i class="fas fa-chart-bar"></i> Analytics
                    </a></li>
                    <li><a href="#settings" class="nav-link" data-tab="settings">
                        <i class="fas fa-cog"></i> Settings
                    </a></li>
                </ul>
            </nav>
        </aside>

        <main class="main-content">
            <div class="top-bar">
                <h1>Licenses</h1>
                <div class="user-menu">
                    <button class="user-button">
                        <i class="fas fa-user-circle"></i>
                        <span> <%= @user_info["username"] %> </span>
                        <i class="fas fa-chevron-down"></i>
                    </button>
                    <div class="user-menu-dropdown">
                        <a href="#profile" class="user-menu-item">
                            <i class="fas fa-user"></i> Profile
                        </a>
                        <a href="#settings" class="user-menu-item">
                            <i class="fas fa-cog"></i> Settings
                        </a>
                        <a href="#logout" class="user-menu-item">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </a>
                    </div>
                </div>
            </div>

            <div id="dashboard" class="tab-content active">
                <div class="stats-grid">
                    <div class="stat-card">
                        <h3>Total Licenses</h3>
                        <div class="value"><%= @licenses.length %></div>
                    </div>
                    <div class="stat-card">
                        <h3>Credits</h3>
                        <div class="value"> <%= @user_info["credits"] %> </div>
                    </div>
                    <div class="stat-card">
                        <h3>Account Type</h3>
                        <div class="value"> <%= @user_info["role"] == 1 ? "User" : (@user_info["role"] == 2 ? "Admin" : "Error") %> </div>
                    </div>
                </div>

                <div class="card">
                    <h2>Create New License Keys</h2>
                    <div class="license-form">
                        <div class="form-group">
                            <label for="product-name">Product Name</label>
                            <input type="text" id="product-name" name="product-name" class="form-input" required>
                        </div>
                        <div class="form-group">
                            <label for="amount">Amount: <span id="amount-value">50</span></label>
                            <input type="range" id="amount" name="amount" min="1" max="100" value="50" class="form-range">
                        </div>
                        <div class="form-group">
                            <label for="expiration">Expiration Date</label>
                            <input type="date" id="expiration" name="expiration" class="form-input" required>
                        </div>
                        <button type="submit" id="submit-button" class="submit-button">Generate License Keys</button>
                    </div>
                </div>

                <div class="card">
                    <h2>License Keys</h2>
                    <table>
                        <thead>
                            <tr>
                                <th>License Key</th>
                                <th>Product</th>
                                <th>Expiration Time</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Sample data, replace with dynamic data in a real application -->
                            <% if @licenses && @licenses.any? %>
                            <% @licenses.each do |license| %>
                            <tr>
                                <td><%= license["license"] %></td>
                                <td><%= license["product"] %></td>
                                <td><%= license["expiration"] %></td>
                                <td><a href="/action/delete/<%= license["id"] %>">Delete</a>
                                <td>
                            </tr>
                            <% end %>
                            <% else %>
                            <tr>
                                <td colspan="3">No licenses found.</td>
                            </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>

    <script>
        // User menu toggle
        const userButton = document.querySelector('.user-button');
        const userMenu = document.querySelector('.user-menu-dropdown');

        userButton.addEventListener('click', () => {
            userMenu.classList.toggle('active');
        });

        // Close user menu when clicking outside
        document.addEventListener('click', (e) => {
            if (!userButton.contains(e.target) && !userMenu.contains(e.target)) {
                userMenu.classList.remove('active');
            }
        });

        // Update amount slider value
        const amountSlider = document.getElementById('amount');
        const amountValue = document.getElementById('amount-value');
        if (amountSlider && amountValue) {
            amountSlider.addEventListener('input', (e) => {
                amountValue.textContent = e.target.value;
            });
        }

        // Set minimum date to today for expiration input
        const expirationInput = document.getElementById('expiration');
        if (expirationInput) {
            const today = new Date().toISOString().split('T')[0];
            expirationInput.min = today;
        }

        document.getElementById("submit-button").addEventListener('click', (e) => {
            e.preventDefault();
            // Simulate server-side validation and generate license keys
            const productName = document.getElementById('product-name').value;
            const amount = document.getElementById('amount').value;
            const expiration = document.getElementById('expiration').value;

            window.location.href = `/action/generate/${amount}/${productName}/${expiration}`;
        })
    </script>
</body>
</html>